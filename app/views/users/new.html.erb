<% if @user.errors.any? %>
  <% @user.errors.each do | key, value | %>
    <%= content_tag :div, "#{key} - #{value}" %>
  <% end %>
<% end %>

<%= form_for(@user) do |f| %>
  <%= f.label(:username) %>
  <%= f.text_field(:username) %>
  
  <%= f.label(:password) %>
  <%= f.password_field(:password) %>
  
  <%= f.label(:password_confirmation, 'Confirm') %>
  <%= f.password_field(:password_confirmation) %>
  
  <%= f.submit('Create') %>
<% end %>